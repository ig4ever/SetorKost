<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_tipe_rumah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:text="Rumah 40C"
        android:fontFamily="@font/roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/item_tipe_rumah"
        app:layout_constraintBottom_toBottomOf="@+id/item_tipe_rumah"
        app:layout_constraintLeft_toRightOf="@+id/item_tipe_rumah" />

    <TextView
        android:id="@+id/item_nomor_kamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamar 1"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/item_tipe_rumah"
        app:layout_constraintBottom_toBottomOf="@+id/item_tipe_rumah"
        app:layout_constraintLeft_toRightOf="@+id/item_barrier" />

    <TextView
        android:id="@+id/item_harga_kamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 350.000"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textColor="#60000000"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/item_tipe_rumah"
        app:layout_constraintLeft_toLeftOf="@+id/item_tipe_rumah"/>

    <Button
        android:id="@+id/button_ubah_kamar"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/button_ubah"
        android:text="Ubah"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@+id/button_hapus_kamar"
        app:layout_constraintBottom_toBottomOf="@+id/button_hapus_kamar"
        app:layout_constraintRight_toLeftOf="@+id/button_hapus_kamar"/>

    <Button
        android:id="@+id/button_hapus_kamar"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/button_hapus"
        android:text="Hapus"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/item_harga_kamar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>